# This is the parameter file which will tell Cactus
# which thorns to execute and with what values
ActiveThorns = "TestStep CarpetX IOUtil ODESolvers"

Cactus::presync_mode = "mixed-error"

Cactus::terminate   = "iteration"
Cactus::cctk_itlast = 0

CarpetX::verbose = yes

CarpetX::ncells_x = 16
CarpetX::ncells_y = 16
CarpetX::ncells_z = 16

CarpetX::xmin = -0.5
CarpetX::ymin = -0.5
CarpetX::zmin = -0.5

CarpetX::xmax = 0.5
CarpetX::ymax = 0.5
CarpetX::zmax = 0.5

IO::out_dir   = $parfile
IO::out_every = 1

CarpetX::out_performance = no
CarpetX::out_metadata   = no

CarpetX::out_tsv_vars = "TestStep::boxcar"
